<div class="row">
  <div class="col-md-3">
    <%= link_to(album) do %>
      <div class="thumbnail">
        <img src="<%= album.cover %>">
        <div class="caption">
          <h3 class="title">  </h3>
          <%= album.title %>
          <p class="artist">  </p>
          <%= album.artist %>
        </div>
      </div>
    <% end %>
  </div>
</div>
